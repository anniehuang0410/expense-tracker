<div class="row my-5">
  <div class="col-md-6 m-auto mb-3">
    <div class="card card-body">
      <h1 class="text-center mt-3">總金額</h1>
      <div class="list-container">
        <ul class="list-group list-group-flush">            
          {{#each expense}}
          <li class="list-group-item">
            <i class="fa-solid me-2"></i>
            <div class="per-expense">
              {{this.date}}
              {{this.name}}
              {{this.amount}}
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center add-button mt-3">
    <form action="./expenses/new">
      <button type="submit" class="btn btn-primary">新增支出</button>
    </form>
  </div>
</div>

